<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    android:orientation="vertical">

    <fragment
        android:id="@+id/activity_country_detail_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />

    <TextView
        android:id="@+id/activity_country_detail_tv_capital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Capital"/>

    <TextView
        android:id="@+id/activity_country_detail_tv_population"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Population"/>

    <TextView
        android:id="@+id/activity_country_detail_tv_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Area"/>

    <TextView
        android:id="@+id/activity_country_detail_tv_subregion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sub Region"/>

</LinearLayout>